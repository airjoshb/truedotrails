<% content_for :page_title, "Log in. #{Rails.configuration.application_name}." %>
<% content_for :page_description, "Log in to your #{Rails.configuration.application_name} account to get access to your Ruby on Rails template." %>

<div class="mt-4 max-w-md mx-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card" }) do |f| %>
    <h1 class="mt-2 mb-6 text-xl">Log in</h1>

    <%= render "shared/flash", flash: resource.errors %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "tgl tgl-light" %>
        <label class="tgl-btn" for="user_remember_me"></label>
        <label for="user_remember_me" class="ml-2">remember me</label>
      </div>
    <% end -%>

    <div class="buttons">
      <%= f.submit "Log in", class: "btn btn--primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

